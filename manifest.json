{
  "manifest_version": 3,
  "name": "New Tab - What have you made today?",
  "description": "Motivating new tab extension for Firefox.",
  "short_name": "WHYMT - New Tab",
  "version": "1.0.6",
  "author": "Tim Holman",
  "homepage_url": "https://github.com/tholman/what-have-you-made-today",
